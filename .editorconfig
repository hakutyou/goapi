root = true

[*]
# 文件统一 utf-8
charset = utf-8
# 缩进统一 4 个空格
indent_style = space
indent_size = 4
# LF 换行
end_of_line = lf
# 行尾空格清除
trim_trailing_whitespace = true
# 文件尾空白行
insert_final_newline = true
# Tab 宽度
tab_width = 4

[*.yml]
indent_size = 2

[*.go]
indent_style = tab

[Makefile]
indent_style = tab
